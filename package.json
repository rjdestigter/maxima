{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "gypfile": true,
  "dependencies": {
    "bindings": "^1.3.0",
    "bluebird": "^3.5.0",
    "body-parser": "^1.18.1",
    "compression": "^1.7.0",
    "connect-redis": "^3.3.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dataloader": "^1.3.0",
    "express": "^4.15.4",
    "express-flash": "^0.0.2",
    "express-graphql": "^0.6.11",
    "express-session": "^1.15.5",
    "faker": "^4.1.0",
    "graphql": "^0.11.3",
    "graphql-relay": "^0.5.2",
    "handlebars": "^4.0.10",
    "handlebars-layouts": "^3.1.4",
    "i18next": "^9.0.0",
    "i18next-express-middleware": "^1.0.6",
    "i18next-node-fs-backend": "^1.0.0",
    "jest": "^21.1.0",
    "juice": "^4.1.1",
    "knex": "^0.13.0",
    "node-addon-api": "^0.6.3",
    "node-fetch": "^1.7.3",
    "nodemailer": "^4.1.0",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.3.0",
    "pretty-error": "^2.1.1",
    "redis": "^2.8.0",
    "source-map-support": "^0.4.18",
    "validator": "^8.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "chokidar": "^1.7.0",
    "del": "3.0.0",
    "eslint": "^4.7.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-prettier": "^2.5.0",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.2.0",
    "flow-bin": "^0.54.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.1",
    "prettier": "^1.7.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/tools/jest.setup.js"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add --force"],
    "*.{json,gyp}": ["prettier --parser json --write", "git add --force"]
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "fix":
      "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" --fix .",
    "check": "flow check",
    "test": "node --napi-modules --no-warnings node_modules/.bin/jest",
    "test-watch":
      "node --napi-modules --no-warnings node_modules/.bin/jest --watch",
    "build": "node tools/build.js",
    "build-watch": "node tools/build.js --watch",
    "docker-install": "docker-compose run --rm --no-deps api yarn install",
    "docker-upgrade": "docker-compose run --rm --no-deps api yarn upgrade",
    "docker-test": "docker-compose run api yarn test",
    "docker-test-watch": "docker-compose run api yarn test-watch",
    "deploy": "node tools/publish.js",
    "start": "node tools/run.js"
  }
}
